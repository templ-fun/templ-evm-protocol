# TEMPL Protocol Configuration Template
# Copy this to .env and fill in your values
# Or run ./setup.sh for guided setup

# SECURITY (Required)
JWT_SECRET=                      # Will be auto-generated by setup.sh
PRIEST_ADDRESS=                  # Address that controls treasury
FRONTEND_URL=http://localhost:3002

# BLOCKCHAIN (Required)
PRIVATE_KEY=                     # Only needed for deployment
RPC_URL=https://mainnet.base.org # BASE mainnet RPC
TOKEN_ADDRESS=                   # ERC20 token on BASE
ENTRY_FEE=420                    # Must be even number
CONTRACT_ADDRESS=                # Set after deployment
CHAIN_ID=8453                   # BASE mainnet

# DATABASE (Required)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telegram_access
DB_USER=postgres
DB_PASSWORD=

# TELEGRAM (Required)
API_ID=                          # From https://my.telegram.org
API_HASH=                        # From https://my.telegram.org
PHONE_NUMBER=                    # Your phone with country code
SESSION_STRING=                  # Auto-generated on first run
BOT_USERNAME=                    # Your bot username (without @)
TELEGRAM_GROUP_ID=               # Group ID (e.g. -1001234567890)
GROUP_TITLE=Premium Access Group
ROSIE_BOT_USERNAME=RosieBot     # Optional

# SERVER
API_PORT=3002

# OPTIONAL
BASESCAN_API_KEY=                # For contract verification on Basescan