{
  "name": "templ",
  "version": "1.0.0",
  "description": "TEMPL - Smart contracts for DAO-governed token-gated access",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test --grep '^(?!.*@(load)).*'",
    "test:load": "npx hardhat test --grep @load",
    "test:fuzz": "docker run --rm -v \"$PWD\":/src -w /src trailofbits/echidna echidna-test contracts/echidna/EchidnaTemplHarness.sol --contract EchidnaTemplHarness --config ./echidna.yaml",
    "test:allwithload": "npx hardhat test",
    "coverage": "NODE_OPTIONS=--max-old-space-size=16384 npx hardhat coverage",
    "slither": "solc-select install 0.8.23 && solc-select use 0.8.23 && slither . --config-file slither.config.json",
    "lint": "npx solhint -f stylish 'contracts/**/*.sol' && npx prettier --plugin=prettier-plugin-solidity --check 'contracts/**/*.sol'",
    "lint:fix": "npx prettier --plugin=prettier-plugin-solidity --write 'contracts/**/*.sol'",
    "deploy": "npx hardhat run scripts/deploy-templ.cjs --network base",
    "deploy:factory:local": "npx hardhat run scripts/deploy-factory.cjs --network localhost",
    "deploy:local": "npx hardhat run scripts/deploy-templ.cjs --network localhost",
    "deploy:factory": "npx hardhat run scripts/deploy-factory.cjs --network base",
    "node": "npx hardhat node"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "base",
    "dao",
    "smart-contracts"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "codecov": "^3.8.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.19.2",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
