# Cloudflare API credentials (required for all runs)
CLOUDFLARE_ACCOUNT_ID=00000000000000000000000000000000
CLOUDFLARE_API_TOKEN=cf_example_token_with_workers_pages_d1_scopes

# D1 database configuration (required to apply schema migrations)
CF_D1_DATABASE_NAME=templ-backend
CF_D1_DATABASE_ID=00000000-0000-0000-0000-000000000000
CF_D1_BINDING=TEMPL_DB

# Backend metadata (required when deploying with --skip-worker)
BACKEND_SERVER_ID=templ-prod

# Frontend build configuration (injected during Vite build)
VITE_BACKEND_URL=https://templ-backend.example.com
VITE_BACKEND_SERVER_ID=templ-prod
VITE_TEMPL_FACTORY_ADDRESS=0xYourFactory
VITE_TEMPL_FACTORY_PROTOCOL_RECIPIENT=0xProtocolTreasury
VITE_TEMPL_FACTORY_PROTOCOL_PERCENT=10
VITE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your-key

# Cloudflare Pages deployment (omit if using --skip-pages)
CF_PAGES_PROJECT=templ-frontend
CF_PAGES_BRANCH=production

# Optional Worker configuration (ignored while templ runs on a Node backend)
# CF_WORKER_NAME=templ-backend
# CF_COMPATIBILITY_DATE=2024-11-05
# APP_BASE_URL=https://templ.example
# TRUSTED_FACTORY_ADDRESS=0xYourFactory
# TRUSTED_FACTORY_DEPLOYMENT_BLOCK=0
# REQUIRE_CONTRACT_VERIFY=1

# Optional Worker secrets (ignored with --skip-worker)
# TELEGRAM_BOT_TOKEN=123456:bot-token-from-botfather
# RPC_URL=https://base-mainnet.g.alchemy.com/v2/your-key
