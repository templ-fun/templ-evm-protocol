{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.js"],
  "exclude": [
    "node_modules",
    "e2e",
    "dist",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/core-flows.integration.test.js"
  ]
}
